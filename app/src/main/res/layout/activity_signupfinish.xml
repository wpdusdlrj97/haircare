<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="320"
    android:background="@drawable/signupfinish_background"
    >

    <LinearLayout
        android:layout_weight="25"
        android:layout_width="0dp"
        android:layout_height="match_parent">

    </LinearLayout>

    <LinearLayout
        android:layout_weight="270"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="700">

        <LinearLayout
            android:layout_weight="150"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>

        <LinearLayout
            android:layout_weight="350"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/signupfinish_check">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="환영합니다!"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:fontFamily="@font/notosans_bold">
            </TextView>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="120dp"
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:text="고객님의 회원가입을 축하드립니다.\n 인공지능을 이용한 두피·모발 분석부터 \n  실제 전문가의 1대1 상담까지 받아보세요"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textAlignment="center"
                android:fontFamily="@font/notosans_medium">
            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="200"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/signupresultscreen_survey_button"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="설문조사 하러가기"
                android:textColor="@color/black"
                android:fontFamily="@font/notosans_bold"
                android:background="@color/white"
                >
            </Button>

            <Button
                android:id="@+id/signupresultscreen_confirm_button"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로그인하기"
                android:textColor="@color/black"
                android:fontFamily="@font/notosans_bold"
                android:background="@color/white"
                >
            </Button>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_weight="25"
        android:layout_width="0dp"
        android:layout_height="match_parent">

    </LinearLayout>



</LinearLayout>